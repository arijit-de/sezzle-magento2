<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Managing Transaction Information -->
    <route url="/V1/sezzle/mine/create-checkout" method="POST">
        <service class="Sezzle\Sezzlepay\Api\OrderManagementInterface" method="createCheckout"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/sezzle/mine/place-order" method="POST">
        <service class="Sezzle\Sezzlepay\Api\OrderManagementInterface" method="placeOrder"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
